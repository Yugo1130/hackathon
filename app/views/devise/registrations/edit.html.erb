<% content_for :title, "アカウント編集 | Myapp" %>

<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-6">
  <h1 class="mb-6 text-2xl font-bold">アカウント編集</h1>

  <!-- 編集フォーム -->
  <div class="rounded-2xl border border-gray-300 bg-white p-6 shadow-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- メール -->
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.email_field :email,
                autofocus: true, autocomplete: "email",
                class: "pl-3 block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- 名前 -->
      <div>
        <div class="flex items-baseline gap-2">
          <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700" %>
          <small class="text-xs text-gray-500">（名前は公開されます）</small>
        </div>
        <div class="mt-2">
          <%= f.text_field :name, autocomplete: "name",
                class: "pl-3 block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="rounded-xl border border-amber-200 bg-amber-50 px-4 py-3 text-sm text-amber-900">
          現在、以下のメールアドレスで確認待ちです：
          <span class="font-mono"><%= resource.unconfirmed_email %></span>
        </div>
      <% end %>

      <!-- パスワード -->
      <div>
        <div class="flex items-baseline gap-2">
          <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium text-gray-700" %>
          <small class="text-xs text-gray-500">（変更しない場合は空欄のまま）</small>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password",
                class: "pl-3 block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> 文字以上</p>
        <% end %>
      </div>

      <!-- パスワード（確認） -->
      <div>
        <div class="flex items-baseline gap-2">
          <%= f.label :password_confirmation, "新しいパスワード", class: "block text-sm font-medium text-gray-700" %>
          <small class="text-xs text-gray-500">（確認）</small>
        </div>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "pl-3 block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- 現在のパスワード -->
      <div>
        <div class="flex items-baseline gap-2">
          <%= f.label :current_password, "現在のパスワード", class: "block text-sm font-medium text-gray-700" %>
          <small class="text-xs text-gray-500">（変更には現在のパスワードが必要です）</small>
        </div>
        <div class="mt-2">
          <%= f.password_field :current_password, autocomplete: "current-password",
                class: "pl-3 block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- アクション -->
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <%= f.submit "更新",
              class: "inline-flex items-center rounded-xl bg-[#F08B71] px-4 py-2 text-sm font-semibold text-white hover:opacity-90 active:opacity-100" %>

        <%= link_to "戻る",
              (request.referer.presence || root_path),
              class: "inline-flex items-center justify-center rounded-xl border px-4 py-2 text-sm hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>

  <!-- 危険ゾーン：アカウント削除 -->
  <div class="mt-8 rounded-2xl border border-red-500 bg-white p-6">
    <h3 class="mb-3 text-base font-semibold text-red-500">アカウント削除</h3>
    <p class="mb-4 text-sm text-red-900">この操作は取り消せません。</p>
    <div>
      <%= button_to "アカウントを削除する",
            registration_path(resource_name),
            method: :delete,
            data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" },
            class: "inline-flex items-center rounded-xl bg-red-600 px-4 py-2 text-sm font-semibold text-white hover:bg-red-700" %>
    </div>
  </div>
</div>
