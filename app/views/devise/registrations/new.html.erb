<% content_for :title, "アカウント登録 | Myapp" %>

<div class="mx-auto max-w-md px-4 sm:px-6 lg:px-8 py-6">
  <h1 class="mb-6 text-2xl font-bold">アカウント登録</h1>

  <div class="rounded-2xl border border-gray-300 bg-white p-6 shadow-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- メール -->
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.email_field :email,
                autofocus: true, autocomplete: "email",
                class: "block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- 名前 -->
      <div>
        <div class="flex items-baseline gap-2">
          <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700" %>
          <small class="text-xs text-gray-500">（名前は公開されます）</small>
        </div>
        <div class="mt-2">
          <%= f.text_field :name, autocomplete: "name",
                class: "block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- パスワード -->
      <div>
        <div class="flex items-baseline gap-2">
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <small class="text-xs text-gray-500">（<%= @minimum_password_length %> 文字以上）</small>
          <% end %>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password",
                class: "block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- パスワード（確認） -->
      <div>
        <div class="flex items-baseline gap-2">
          <%= f.label :password_confirmation, "パスワード", class: "block text-sm font-medium text-gray-700" %>
          <small class="text-xs text-gray-500">（確認）</small>
        </div>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- アクション -->
      <div class="flex items-center justify-between">
        <%= f.submit "登録する",
              class: "inline-flex items-center rounded-xl bg-[#F08B71] px-4 py-2 text-sm font-semibold text-white hover:opacity-90 active:opacity-100" %>
      </div>
    <% end %>
  </div>

  <!-- 既存リンク（ログインへ等）を控えめに -->
  <div class="mt-4 text-center text-sm text-gray-600 space-x-4">
    <%= link_to "ログイン", new_user_session_path,
        class: "underline underline-offset-2 hover:text-gray-900" %>
  </div>
</div>
