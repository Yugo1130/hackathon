<% content_for :title, "ログイン | Myapp" %>

<div class="mx-auto max-w-md px-4 sm:px-6 lg:px-8 py-6">
  <h1 class="mb-6 text-2xl font-bold">ログイン</h1>

  <div class="rounded-2xl border border-gray-300 bg-white p-6 shadow-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <!-- メール -->
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.email_field :email,
                autofocus: true, autocomplete: "email",
                class: "pl-3 block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- パスワード -->
      <div>
        <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "current-password",
                class: "pl-3 block w-full rounded-xl border-gray-300 shadow-sm focus:border-[#F08B71] focus:ring-[#F08B71]" %>
        </div>
      </div>

      <!-- ログイン状態を保持 -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me,
                class: "h-4 w-4 rounded border-gray-300 text-[#F08B71] focus:ring-[#F08B71]" %>
          <%= f.label :remember_me, "ログイン状態を保持する",
                class: "ml-2 text-sm text-gray-700" %>
        </div>
      <% end %>

      <!-- アクション -->
      <div class="flex items-center justify-between">
        <%= f.submit "ログイン",
              class: "inline-flex items-center rounded-xl bg-[#F08B71] px-4 py-2 text-sm font-semibold text-white hover:opacity-90 active:opacity-100" %>
      </div>
    <% end %>
  </div>

  <!-- 下部リンク（ハードコード、日本語） -->
  <div class="mt-4 text-center text-sm text-gray-600 space-x-4">
    <%= link_to "アカウント登録", new_user_registration_path,
          class: "underline underline-offset-2 hover:text-gray-900" %>
    <%= link_to "パスワード再設定", new_user_password_path,
          class: "underline underline-offset-2 hover:text-gray-900" %>
  </div>
</div>
